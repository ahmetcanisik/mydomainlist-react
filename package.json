{
  "name": "mydomainlist",
  "description": "Run your electron application and react application separately and get build.",
  "author": "ahmetcanisik <imcanisik@gmail.com> (https://ahmetcanisik.com)",
  "license": "MIT",
  "version": "0.0.1",
  "private": false,
  "homepage": "./",
  "main": "public/electron.js",
  "dependencies": {
    "@heroicons/react": "^2.1.5",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^13.0.0",
    "@testing-library/user-event": "^13.2.1",
    "fvonts": "^0.0.1",
    "highlight.js": "^11.10.0",
    "mycolorscheme": "^0.0.4",
    "react": "^18.3.1",
    "react-copy-to-clipboard": "^5.1.0",
    "react-dom": "^18.3.1",
    "react-scripts": "5.0.1",
    "react-tooltip": "^5.27.1",
    "web-vitals": "^2.1.0"
  },
  "scripts": {
    "start": "set \"BROWSER=none\" && react-scripts start",
    "build": "set \"GENERATE_SOURCEMAP=false\" && react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron-forge start",
    "dev": "concurrently \"yarn start\" \"yarn electron\"",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "build": {
    "appId": "com.mydomain.list",
    "productName": "My Domain List",
    "electronPackagerConfig": {
      "asar": false
    },
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icons/win/icon.ico"
    }
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@electron-forge/cli": "^7.4.0",
    "@electron-forge/maker-deb": "^7.4.0",
    "@electron-forge/maker-rpm": "^7.4.0",
    "@electron-forge/maker-squirrel": "^7.4.0",
    "@electron-forge/maker-zip": "^7.4.0",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "electron": "^31.2.0",
    "electron-is-dev": "^3.0.1",
    "postcss": "^8.4.39",
    "tailwindcss": "^3.4.4"
  }
}
